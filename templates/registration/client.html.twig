{% extends 'base.html.twig' %}

{% block title %}Inscription Client | MayMap{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            position: relative;
            overflow-x: hidden;
            background: #f8f9fa;
        }
        
        #particles-js {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: 0;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }
        
        .registration-container {
            max-width: 600px;
            margin: 2rem auto;
            padding: 3rem;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
            position: relative;
            z-index: 1;
            border: 1px solid rgba(255, 255, 255, 0.2);
            overflow: hidden;
        }
        
        .registration-container::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(98, 0, 238, 0.08) 0%, rgba(255, 255, 255, 0) 70%);
            z-index: -1;
        }
        
        .registration-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }
        
        .registration-header h1 {
            font-size: 2.5rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
            background: linear-gradient(45deg, #6200ee, #03dac6);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            text-shadow: 0 2px 10px rgba(98, 0, 238, 0.1);
        }
        
        .registration-header p {
            color: #666;
            font-size: 1.1rem;
        }
        
        .form-group {
            margin-bottom: 1.8rem;
            position: relative;
        }
        
        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            color: #555;
            font-weight: 500;
            transition: all 0.3s;
        }
        
        .form-control {
            border-radius: 12px;
            padding: 14px 18px;
            border: 1px solid #e0e0e0;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            width: 100%;
            background: rgba(255, 255, 255, 0.8);
            font-size: 1rem;
        }
        
        .form-control:focus {
            border-color: #6200ee;
            box-shadow: 0 0 0 3px rgba(98, 0, 238, 0.15);
            transform: translateY(-2px);
        }
        
        .form-control:hover {
            border-color: #b39ddb;
        }
        
        .btn-register {
            background: linear-gradient(45deg, #6200ee, #03dac6);
            border: none;
            color: white;
            padding: 16px 0;
            border-radius: 12px;
            font-weight: 600;
            width: 100%;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            box-shadow: 0 5px 20px rgba(98, 0, 238, 0.3);
            position: relative;
            overflow: hidden;
            font-size: 1.1rem;
            letter-spacing: 0.5px;
            margin-top: 1rem;
        }
        
        .btn-register::after {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: 0.5s;
        }
        
        .btn-register:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(98, 0, 238, 0.4);
        }
        
        .btn-register:hover::after {
            left: 100%;
        }
        
        .btn-register:active {
            transform: translateY(-2px);
        }
        
        .login-link {
            text-align: center;
            margin-top: 2rem;
            color: #666;
            font-size: 1rem;
        }
        
        .login-link a {
            color: #6200ee;
            font-weight: 600;
            text-decoration: none;
            position: relative;
            transition: all 0.3s;
        }
        
        .login-link a::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 0;
            height: 2px;
            background: #6200ee;
            transition: width 0.3s;
        }
        
        .login-link a:hover::after {
            width: 100%;
        }
        
        @media (max-width: 768px) {
            .registration-container {
                margin: 1rem;
                padding: 2rem;
            }
            
            .registration-header h1 {
                font-size: 2rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div id="particles-js"></div>
    
    <div class="registration-container" data-aos="fade-up">
        <div class="registration-header" data-aos="fade-up" data-aos-delay="100">
            <h1>Créer un compte client</h1>
            <p>Rejoignez notre communauté et découvrez les meilleurs établissements</p>
        </div>
        
        {{ form_start(registrationForm) }}
        <div class="form-group" data-aos="fade-up" data-aos-delay="200">
                {{ form_label(registrationForm.fname, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.fname, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Duppont'
                    }
                }) }}
            </div>
            <div class="form-group" data-aos="fade-up" data-aos-delay="200">
                {{ form_label(registrationForm.lname, 'Prenom (s)', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.lname, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Jean'
                    }
                }) }}
            </div>
            <div class="form-group" data-aos="fade-up" data-aos-delay="200">
                {{ form_label(registrationForm.email, 'Adresse email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.email, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'votre@email.com'
                    }
                }) }}
            </div>
            
            <div class="form-group" data-aos="fade-up" data-aos-delay="250">
                {{ form_label(registrationForm.username, 'Nom d\'utilisateur', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.username, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Choisissez un nom d\'utilisateur'
                    }
                }) }}
            </div>
            
            <div class="form-group" data-aos="fade-up" data-aos-delay="300">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.plainPassword, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Créez un mot de passe sécurisé'
                    }
                }) }}
            </div>

            <div class="form-group" data-aos="fade-up" data-aos-delay="200">
                {{ form_label(registrationForm.avatar, 'Profil', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.avatar, {}) }}
            </div>
            
            <button type="submit" class="btn-register" data-aos="fade-up" data-aos-delay="350">
                S'inscrire <i class="fas fa-arrow-right ml-2"></i>
            </button>
        {{ form_end(registrationForm) }}
        
        <div class="login-link" data-aos="fade-up" data-aos-delay="400">
            Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        document.addEventListener('turbo:load', function() {
            AOS.init({
                duration: 800,
                easing: 'ease-in-out',
                once: true
            });
            
            // Configuration des particules
            if (document.getElementById('particles-js')) {
                particlesJS('particles-js', {
                    "particles": {
                        "number": {
                            "value": 70,
                            "density": {
                                "enable": true,
                                "value_area": 800
                            }
                        },
                        "color": {
                            "value": "#6200ee"
                        },
                        "shape": {
                            "type": "circle",
                            "stroke": {
                                "width": 0,
                                "color": "#000000"
                            }
                        },
                        "opacity": {
                            "value": 0.4,
                            "random": true,
                            "anim": {
                                "enable": true,
                                "speed": 1,
                                "opacity_min": 0.1,
                                "sync": false
                            }
                        },
                        "size": {
                            "value": 3,
                            "random": true,
                            "anim": {
                                "enable": true,
                                "speed": 2,
                                "size_min": 0.1,
                                "sync": false
                            }
                        },
                        "line_linked": {
                            "enable": true,
                            "distance": 120,
                            "color": "#6200ee",
                            "opacity": 0.2,
                            "width": 1
                        },
                        "move": {
                            "enable": true,
                            "speed": 1,
                            "direction": "none",
                            "random": true,
                            "straight": false,
                            "out_mode": "out",
                            "bounce": false,
                            "attract": {
                                "enable": true,
                                "rotateX": 600,
                                "rotateY": 1200
                            }
                        }
                    },
                    "interactivity": {
                        "detect_on": "canvas",
                        "events": {
                            "onhover": {
                                "enable": true,
                                "mode": "grab"
                            },
                            "onclick": {
                                "enable": true,
                                "mode": "push"
                            },
                            "resize": true
                        },
                        "modes": {
                            "grab": {
                                "distance": 120,
                                "line_linked": {
                                    "opacity": 0.5
                                }
                            },
                            "push": {
                                "particles_nb": 3
                            }
                        }
                    },
                    "retina_detect": true
                });
            }
        });
    </script>
{% endblock %}