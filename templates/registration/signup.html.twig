{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            position: relative;
            overflow-x: hidden;
            background: #f8f9fa;
        }
        
        #particles-js {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: 0;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }
        
        .signup-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
            position: relative;
            z-index: 1;
        }
        
        .signup-header {
            text-align: center;
            margin-bottom: 3rem;
        }
        
        .signup-header h1 {
            font-size: 2.8rem;
            font-weight: 800;
            margin-bottom: 1rem;
            background: linear-gradient(45deg, #6200ee, #03dac6);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            text-shadow: 0 2px 10px rgba(98, 0, 238, 0.1);
        }
        
        .signup-header p {
            color: #666;
            font-size: 1.2rem;
            max-width: 600px;
            margin: 0 auto;
        }
        
        .user-type-cards {
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
            margin-bottom: 2rem;
        }
        
        .user-type-card {
            flex: 1;
            min-width: 300px;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 2.5rem 2rem;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            text-align: center;
            cursor: pointer;
            border: 2px solid transparent;
            position: relative;
            overflow: hidden;
            z-index: 1;
        }
        
        .user-type-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(98, 0, 238, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
            transform: scale(0);
            transition: transform 0.6s ease;
            z-index: -1;
        }
        
        .user-type-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            border-color: #6200ee;
        }
        
        .user-type-card:hover::before {
            transform: scale(1);
        }
        
        .user-type-card.active {
            border-color: #6200ee;
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.95)), 
                        linear-gradient(135deg, rgba(98, 0, 238, 0.05), rgba(3, 218, 198, 0.05));
        }
        
        .card-icon {
            font-size: 3.5rem;
            margin-bottom: 1.5rem;
            background: linear-gradient(45deg, #6200ee, #03dac6);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            filter: drop-shadow(0 4px 8px rgba(98, 0, 238, 0.2));
        }
        
        .card-title {
            font-size: 1.6rem;
            font-weight: 700;
            margin-bottom: 1rem;
            color: #333;
        }
        
        .card-description {
            color: #666;
            margin-bottom: 2rem;
            font-size: 1rem;
            line-height: 1.6;
        }
        
        .btn-signup {
            background: linear-gradient(45deg, #6200ee, #03dac6);
            border: none;
            color: white;
            padding: 1rem 2.5rem;
            border-radius: 50px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 20px rgba(98, 0, 238, 0.3);
            position: relative;
            overflow: hidden;
        }
        
        .btn-signup::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, rgba(255, 255, 255, 0.2), transparent);
            transform: translateX(-100%);
            transition: transform 0.4s ease;
        }
        
        .btn-signup:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(98, 0, 238, 0.4);
            color: white;
        }
        
        .btn-signup:hover::after {
            transform: translateX(100%);
        }
        
        .btn-signup:active {
            transform: translateY(1px);
        }
        
        .login-redirect {
            text-align: center;
            margin-top: 2rem;
            color: #666;
            font-size: 1rem;
        }
        
        .btn-login {
            display: inline-block;
            margin-top: 1rem;
            background: transparent;
            border: 2px solid #6200ee;
            color: #6200ee;
            padding: 0.7rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }
        
        .btn-login:hover {
            background: #6200ee;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(98, 0, 238, 0.2);
        }
        
        @media (max-width: 768px) {
            .user-type-cards {
                flex-direction: column;
            }
            
            .user-type-card {
                min-width: 100%;
            }
            
            .signup-header h1 {
                font-size: 2.2rem;
            }
            
            .signup-header p {
                font-size: 1rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div id="particles-js"></div>
    
    <div class="signup-container" data-aos="fade-up">
        <div class="signup-header" data-aos="fade-up" data-aos-delay="100">
            <h1>Rejoignez MayMap</h1>
            <p>Choisissez votre type de compte pour commencer votre expérience</p>
        </div>
        
        <div class="user-type-cards">
            <div class="user-type-card" 
                 data-aos="fade-right" 
                 data-aos-delay="200"
                 onclick="window.location.href='{{ path('app_register_client') }}'">
                <div class="card-icon">
                    <i class="fas fa-user"></i>
                </div>
                <h3 class="card-title">Client</h3>
                <p class="card-description">
                    Créez un compte pour découvrir les meilleurs établissements autour de vous, 
                    enregistrer vos favoris et laisser des avis. Profitez d'une expérience personnalisée.
                </p>
                <button class="btn-signup">S'inscrire en tant que Client</button>
            </div>
            
            <div class="user-type-card" 
                 data-aos="fade-left" 
                 data-aos-delay="200"
                 onclick="window.location.href='{{ path('app_register_establishment') }}'">
                <div class="card-icon">
                    <i class="fas fa-store"></i>
                </div>
                <h3 class="card-title">Établissement</h3>
                <p class="card-description">
                    Créez un compte pour votre établissement, gérez votre profil, 
                    publiez des actualités et interagissez avec vos clients. Augmentez votre visibilité.
                </p>
                <button class="btn-signup">S'inscrire en tant qu'Établissement</button>
            </div>
        </div>
        
        <div class="login-redirect" data-aos="fade-up" data-aos-delay="300">
            <p>Vous avez déjà un compte ?</p>
            <a href="{{ path('app_login') }}" class="btn-login">Se connecter</a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        document.addEventListener('turbo:load', function() {
            // Initialisation de AOS
            AOS.init({
                duration: 800,
                easing: 'ease-in-out',
                once: true
            });
            
            // Animation au survol des cartes
            const cards = document.querySelectorAll('.user-type-card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.classList.add('active');
                });
                
                card.addEventListener('mouseleave', function() {
                    this.classList.remove('active');
                });
                
                // Permettre le clic sur toute la carte
                card.style.cursor = 'pointer';
            });
            
            // Configuration des particules
            if (document.getElementById('particles-js')) {
                particlesJS('particles-js', {
                    "particles": {
                        "number": {
                            "value": 80,
                            "density": {
                                "enable": true,
                                "value_area": 800
                            }
                        },
                        "color": {
                            "value": "#6200ee"
                        },
                        "shape": {
                            "type": "circle",
                            "stroke": {
                                "width": 0,
                                "color": "#000000"
                            },
                            "polygon": {
                                "nb_sides": 5
                            }
                        },
                        "opacity": {
                            "value": 0.3,
                            "random": true,
                            "anim": {
                                "enable": true,
                                "speed": 1,
                                "opacity_min": 0.1,
                                "sync": false
                            }
                        },
                        "size": {
                            "value": 3,
                            "random": true,
                            "anim": {
                                "enable": true,
                                "speed": 2,
                                "size_min": 0.1,
                                "sync": false
                            }
                        },
                        "line_linked": {
                            "enable": true,
                            "distance": 150,
                            "color": "#6200ee",
                            "opacity": 0.2,
                            "width": 1
                        },
                        "move": {
                            "enable": true,
                            "speed": 1,
                            "direction": "none",
                            "random": true,
                            "straight": false,
                            "out_mode": "out",
                            "bounce": false,
                            "attract": {
                                "enable": true,
                                "rotateX": 600,
                                "rotateY": 1200
                            }
                        }
                    },
                    "interactivity": {
                        "detect_on": "canvas",
                        "events": {
                            "onhover": {
                                "enable": true,
                                "mode": "grab"
                            },
                            "onclick": {
                                "enable": true,
                                "mode": "push"
                            },
                            "resize": true
                        },
                        "modes": {
                            "grab": {
                                "distance": 140,
                                "line_linked": {
                                    "opacity": 0.5
                                }
                            },
                            "push": {
                                "particles_nb": 4
                            }
                        }
                    },
                    "retina_detect": true
                });
            }
        });
    </script>
{% endblock %}