{# templates/security/verify_account.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white text-center">
                        <h1 class="h4 mb-0">Vérification du compte</h1>
                    </div>
                    <div class="card-body p-4">
                        <div class="text-center mb-4">
                            <i class="bi bi-envelope-check fs-1 text-primary"></i>
                            <p class="mt-3">Un code de vérification a été envoyé à votre adresse email.</p>
                            <p class="text-muted">Veuillez le saisir ci-dessous pour compléter la vérification.</p>
                        </div>

                        {{ form_start(form, { 'attr': {'data-turbo': 'false', 'class': 'needs-validation', 'novalidate': 'novalidate'} }) }}
                            <div class="mb-3">
                                {{ form_label(form.code, 'Code de vérification', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.code, {'attr': {
                                    'class': 'form-control form-control-lg',
                                }}) }}
                                <div class="invalid-feedback">
                                    Veuillez entrer le code de vérification.
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-check-circle me-2"></i>Vérifier
                                </button>
                            </div>
                        {{ form_end(form) }}

                        <div class="text-center mt-4">
                            <p class="text-muted mb-2">Vous n'avez pas reçu de code ?</p>
                            <a href="#" class="btn btn-outline-secondary">Renvoyer le code</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}